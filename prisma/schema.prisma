generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Frequency {
  DAILY
  WEEKLY
  CUSTOM
}

model User {
  id           Int     @id @default(autoincrement())
  name         String
  email        String @unique
  password     String
  username     String @unique
  refreshToken String
  timeZone     String
  habits       Habit[]
}

model Habit {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  goal         String
  frequency    Frequency
  reminderTime DateTime
  startDate    DateTime
  endDate      DateTime
  personality  String
  emailStyle   String
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
}
